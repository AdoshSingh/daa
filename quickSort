#include <iostream>
using namespace std;
int partition(int arr[], int low, int high)
{
    int pivot = arr[high], i = (low - 1);
    for (int j = low; j <= high - 1; j++)
    {
        if (arr[j] < pivot)
        {
            i++;
            swap(arr[i], arr[j]);
        }
    }
    swap(arr[i + 1], arr[high]);
    return (i + 1);
}
void quickSort(int arr[], int low, int high)
{
    if (low < high)
    {
        int pi = partition(arr, low, high);
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}
int main()
{
    cout << "\t\t Adosh Singh 2020UII7403" << endl;
    int n;
    cout << "ENTERED SIZE OF AN ARRAY : " << endl;
    cin >> n;
    cout << "ENTER ELEMENTS OF AN ARRAY : " << endl;
    int arr[n];
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    cout << "UNSORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;
    quickSort(arr, 0, n);
    cout << "SORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    return 0;
}
