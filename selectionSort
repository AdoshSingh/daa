#include <iostream>
using namespace std;
void selectionSort(int arr[], int n)
{
    int i, j, min_idx;
    for (i = 0; i < n - 1; i++)
    {
        min_idx = i;
        for (j = i + 1; j < n; j++)
            if (arr[j] < arr[min_idx])
                min_idx = j;
        swap(arr[min_idx], arr[i]);
    }
}
void solve()
{
    int n;
    cout << "ENTERED SIZE OF AN ARRAY : "<< endl;
    cin >> n;
    cout<<"ENTER ELEMENTS OF AN ARRAY : "<<endl;
    int arr[n];
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    cout << "UNSORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
    selectionSort(arr, n);
    cout << "SORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
}

int main()
{
    cout << "\t\t Adosh Singh 2020UII7403" << endl;
    solve();
    return 0;
}
