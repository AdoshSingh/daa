#include <iostream>
using namespace std;
void bubbleSort(int arr[], int n)
{
    int i, j;
    for (i = 0; i < n - 1; i++)
    {
        for (j = 0; j < n - i - 1; j++)
        {
            if (arr[j] > arr[j + 1])
                swap(arr[j], arr[j + 1]);
        }
    }
}
void solve()
{
    int n;
    cout << "ENTERED SIZE OF AN ARRAY : " << endl;
    cin >> n;
    cout << "ENTER ELEMENTS OF AN ARRAY : " << endl;
    int arr[n];
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    cout << "UNSORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
    bubbleSort(arr, n);
    cout << "SORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
}
int main()
{
    cout << "\t\t Adosh Singh 2020UII7403" << endl;
    solve();
    return 0;
}
