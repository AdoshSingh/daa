#include <iostream>
using namespace std;
void insertionSort(int arr[], int n)
{
    int i, key, j;
    for (i = 1; i < n; i++)
    {
        key = arr[i];
        j = i - 1;
        while (j >= 0 && arr[j] > key)
        {
            arr[j + 1] = arr[j];
            j = j - 1;
        }
        arr[j + 1] = key;
    }
}
void solve()
{
    int n;
    cout << "ENTERED SIZE OF AN ARRAY : "<< endl;
    cin >> n;
    cout<<"ENTER ELEMENTS OF AN ARRAY : "<<endl;
    int arr[n];
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    cout << "UNSORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    cout << endl;
    insertionSort(arr, n);
    cout << "SORTED ELEMENTS OF AN ARRAY : " << endl;
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
}
int main()
{
    cout << "\t\t Adosh Singh 2020UII7403" << endl;
    solve();
    return 0;
}
